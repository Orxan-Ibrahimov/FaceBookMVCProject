@model HomeVM
@{
    ViewData["Title"] = "SearchUser";
}

<main>
    <section class="my-5">
        <div class="container">
            <div class="row">
                @foreach (var user in Model.AllUsers)
                {
                    <div class="col-6 offset-3 bg-white rounded d-flex align-items-center justify-content-between px-4 py-3">
                        <div class="d-flex align-items-center">
                            <img src="~/assets/img/1.jpg" width="100" height="100" class="rounded-circle" alt="profile" />
                            <div class="mx-3">
                                <a href="" class="text-dark">@user.FirstName @user.LastName</a>
                                <p class="text-muted">Arkadas</p>
                                <p class="text-muted mb-0"><i class="fas fa-user-check"></i> 8 ortak arkadaş</p>
                                <p class="text-muted mb-0">KEF ELE .SIRKETI'da FSO</p>
                            </div>
                        </div>
                        <a href="" class="btn btn-secondary p-3 rounded-circle">
                            <i class="fas fa-user-plus"></i>
                        </a>
                    </div>

                }
            </div>
        </div>
    </section>
</main>