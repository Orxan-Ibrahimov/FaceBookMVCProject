@model SecurityVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/c372b7f0bf.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <title>CompleteRegister</title>
</head>
<body>

    <!-- Register start -->
    <div class="register-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3 text-center">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-form">
                                <form method="post" asp-action="CompleteRegister">
                                    <div asp-validation-summary="ModelOnly" class="alert text-danger"></div>
                                    <div class="form-group my-4">
                                        <label asp-for="Code"></label>
                                        <input asp-for="Code" class="form-control my-2" placeholder="Type here current password" required>
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary submit-btn btn-block">Send</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>>
    <!-- Register end -->
</body>
</html>
