<!-- Modal -->
<div class="modal" id="exampleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Profili Düzenle</h5>
                <a class="modal-operations btn btn-outline-danger"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex justify-content-between w-100 my-3">
                        <h5>Profil Resmi</h5>
                        <div class="modal-body d-flex justify-content-end" method="post" asp-controller="Profile" asp-action="EditProfileImage">
                            <label>
                                <button type="button" class="btn btn-outline-success profile-operations">Ekle</button>
                            </label>
                        </div>
                    </div>
                    <img src="~/assets/img/@Model.SearchedUser.Profile" alt="profile" width="150" height="150" class="rounded-circle" />
                </div>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex justify-content-between align-items-center w-100 my-3">
                        <h5>Kapak Fotoğrafı</h5>
                        <div class="modal-body d-flex justify-content-end" method="post" asp-controller="Profile" asp-action="EditCoverImage">
                            <label>
                                <button type="button" id="profile" class="btn btn-outline-success cover-operations">Ekle</button>
                            </label>
                        </div>
                    </div>
                    <img src="~/assets/img/@Model.SearchedUser.Cover" alt="profile" width="700" height="300" class="rounded" />
                </div>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex justify-content-between w-100 my-3">
                        <h5>Biyografi</h5>
                        <a class="btn btn-outline-primary">Ekle</a>
                    </div>
                    <div id="biography">
                        <textarea class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary modal-operations">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Profile Edit -->
<div class="modal" id="profileImage">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">Profil Resmini Güncelle</h5>
                <a class="btn btn-outline-light profile-operations"><i class="fas fa-times"></i></a>
            </div>
            <form enctype="multipart/form-data" method="post">
                <div class="modal-body" id="editprofile">
                    <div class="form-row">
                        <div class="col-12 mb-3">
                            <label>
                                <input asp-for="SearchedUser.ProfilePhoto" hidden class="form-control" />
                                <a class="btn btn-outline-success"><i class="fas fa-image"></i></a>
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button asp-controller="Profile" asp-action="EditProfileImage" asp-route-id="@Model.SearchedUser.Id" type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary profile-operations">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

